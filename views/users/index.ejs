<!-- users/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cookbook Community</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Cookbook Community</h1>

    <p>Explore other members and get inspired by their pantry items!</p>

    <ul>
      <% users.forEach(user => { %>
      <li>
        <a href="/users/<%= user._id %>"><%= user.username %></a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
